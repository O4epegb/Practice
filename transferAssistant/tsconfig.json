{
    "compilerOptions": {
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "compileOnSave": false,
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./node_modules/@types/**/*.d.ts"
    ],
    "files": [
        "./src/actions.ts",
        "./src/backend/index.ts",
        "./src/constants.ts",
        "./src/frontend/searchHandler.ts",
        "./src/inputPositions.ts",
        "./src/models.ts",
        "./src/players.ts",
        "./src/shortcut.ts",
        "./src/utils.ts",
        "./src/frontend/index.tsx",
        "./node_modules/@types/csv-parse/index.d.ts",
        "./node_modules/@types/csv-stringify/index.d.ts",
        "./node_modules/@types/electron/index.d.ts",
        "./node_modules/@types/lodash/index.d.ts",
        "./node_modules/@types/node-notifier/index.d.ts",
        "./node_modules/@types/node/index.d.ts",
        "./node_modules/@types/react-dom/index.d.ts",
        "./node_modules/@types/react-dom/server.d.ts",
        "./node_modules/@types/react/index.d.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    },
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    }
}
