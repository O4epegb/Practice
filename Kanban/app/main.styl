body {
  background-color navajowhite
  font-family sans-serif
}

.add-note {
  background-color: #fdfdfd;
  border: 1px solid #ccc;
  box-sizing border-box
  width 200px
  height 100px
  font-size 90px
  line-height 90px
}

.notes {
  padding-left: 0;
  width 200px
  list-style: none;
  display block
  margin 10px
}

.note {
  margin-bottom: 0.5em;
  padding: 0.5em;
  background-color: #fdfdfd;
  box-shadow: 0 0 0.3em 0.03em rgba(0, 0, 0, 0.3);
}
.note:hover {
  box-shadow: 0 0 0.3em 0.03em rgba(0, 0, 0, 0.7);
  transition: 0.6s;
}

.note .value {
  display: inline-block;
}

.note input {
  display block
  width 100%
  box-sizing border-box
  height 18px
}

.note .delete {
  float: right;
  padding: 0;

  background-color: #fdfdfd;
  border: none;
  cursor: pointer;
  visibility: hidden;
}
.note:hover .delete {
  visibility: visible;
}

.lane {
  display: inline-block;
  margin: 1em;

  background-color: #efefef;
  border: 1px solid #ccc;
  border-radius: 0.5em;
  min-width: 10em;
  vertical-align: top;
}

.lane-header {
  overflow: auto;

  padding: 1em;

  color: #efefef;
  background-color: #333;

  border-top-left-radius: 0.5em;
  border-top-right-radius: 0.5em;
}

.lane-name {
  float: left;
  & input {
    width 130px
    box-sizing border-box
    display inline-block
    border none
  }
}

.lane-add-note {
  float: right;

  margin-left: 0.5em;
}

.add-lane, .lane-add-note button {
  background-color: #fdfdfd;
  border: 1px solid #ccc;
}
