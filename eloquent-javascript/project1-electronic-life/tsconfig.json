{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "filesGlob": [
        "node_modules/@types/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "files": [
        "node_modules/@types/react-dom/index.d.ts",
        "node_modules/@types/react-dom/server.d.ts",
        "node_modules/@types/react/index.d.ts",
        "./src/life/directions.ts",
        "./src/life/grid.ts",
        "./src/life/models.ts",
        "./src/life/utils.ts",
        "./src/life/vector.ts",
        "./src/life/view.ts",
        "./src/life/world-objects/critters/bouncing.ts",
        "./src/life/world-objects/critters/index.ts",
        "./src/life/world-objects/critters/wall-follower.ts",
        "./src/life/world-objects/index.ts",
        "./src/life/world-objects/wall.ts",
        "./src/life/world.ts",
        "./src/components/App.tsx",
        "./src/index.tsx"
    ],
    "compileOnSave": false,
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    },
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    }
}
